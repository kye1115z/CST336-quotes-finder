<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/head.ejs") %>
    <link href="/css/authors.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <div class="main-container">
      <%- include("partials/sidebar.ejs") %>
      <div class="authors-layout">
        <h1 class="title">Add Authors</h1>
        <form action="/addAuthor" method="post">
          <div class="name-box">
            <label for="firstName" class="form-label">First Name</label>
            <input id="firstName" name="firstName" class="form-input" />

            <label for="lastName" class="form-label">Last Name</label>
            <input id="lastName" name="lastName" class="form-input" />
          </div>
          <label class="form-label">Gender</label>
          <label for="male">
            <input type="radio" id="male" name="gender" value="male" />
            Male
          </label>
          <label for="female">
            <input type="radio" id="female" name="gender" value="female" />
            Female
          </label>

          <label for="biography" class="form-label">Biography</label>
          <textarea id="biography" name="biography"></textarea>

          <label for="profession" class="form-label">Profession</label>
          <input id="profession" name="profession" class="form-input" />

          <label for="country" class="form-label">Country</label>
          <input id="country" name="country" class="form-input" />

          <label for="picture" class="form-label">Picture</label>
          <textarea id="picture" name="picture"></textarea>

          <label for="dob" class="form-label">Date of Birth</label>
          <input id="dob" name="dob" type="date" />

          <label for="dod" class="form-label">Date of Death</label>
          <input id="dod" name="dod" type="date" />

          <button class="submit-btn">Add Author</button>
        </form>
      </div>
    </div>

    <script src="/js/script.js"></script>
  </body>
</html>
